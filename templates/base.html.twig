<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
    {% block stylesheets %}

    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('main') }}">Gastron'Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('main') }}">Accueil</a>
            </li>
            {% if is_granted('ROLE_CLIENT') %}
                <li class="nav-item">
                    <a class="nav-link" href="#">Passer une commande</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Votre Profil</a>
                </li>
            {% endif %}
            {% if is_granted('ROLE_LIVREUR') %}
                <li class="nav-item">
                    <a class="nav-link" href="#">Voir livraison</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Historique livraison</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Votre Profil</a>
                </li>
            {% endif %}
            {% if is_granted('ROLE_RESTAURATEUR') %}
                <li class="nav-item">
                    <a class="nav-link" href="#">Commandes en attentes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Historique commandes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Ajouter des plats</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Votre Profil</a>
                </li>
            {% endif %}
        </ul>
        <ul class="navbar-nav ml-auto">
            {% if app.user %}
                <li class="nav-item">
                    <a class="btn btn-danger" href="{{ path('app_logout') }}">Se Deconnecter</a>
                </li>

            {% else %}
                <li class="nav-item">
                    <a class="btn btn-primary mr-1" href="{{ path('app_login') }}">Se Connecter</a>
                </li>
            {% endif %}
        </ul>
    </div>

</nav>

{% block body %}{% endblock %}
</body>
{% block javascripts %}{% endblock %}
{{ encore_entry_script_tags('app') }}
</html>

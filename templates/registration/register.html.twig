{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="text-center"> Rejoignez-nous !</h1>

    {{ form_start(registrationForm, {'attr':{'class':'form-group offset-3 col-6'}}) }}
    <div class="row">
        <div class="col">
            {{ form_row(registrationForm.lastName, {'attr':{'class':'form-control '}}) }}
        </div>
        <div class="col">
            {{ form_row(registrationForm.firstName, {'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(registrationForm.adress, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col">
            {{ form_row(registrationForm.ville, {'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(registrationForm.email, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="col">
            {{ form_row(registrationForm.plainPassword, {'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    {{ form_row(registrationForm.userType, {'attr':{'class':'form-control'}}) }}
    {{ form_row(registrationForm.agreeTerms) }}

    <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}

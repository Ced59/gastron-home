{% extends 'base.html.twig' %}

{% block title %}Edit Mon Profil{% endblock %}

{% block body %}
    <div class="offset-2 col-8 mt-5">
        <h1 class="text-center">Modifier votre Profil</h1>

        {{ form_start(form, {'attr':{'class':'form-group'}}) }}
        <div class="d-flex justify-content-around mt-5">
            <div class="col">
                {{ form_row(form.email, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="col">
                {{ form_row(form.firstName, {'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="d-flex justify-content-around mt-3">
            <div class="col">
                {{ form_row(form.lastName, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="col">
                {{ form_row(form.adress, {'attr':{'class':'form-control'}}) }}
            </div>
        </div>
        <div class="d-flex justify-content-around mt-3">
            <div class="col">
                {{ form_row(form.ville, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="col">
                {{ form_row(form.image, {'attr':{'class':'form-control-file'}}) }}
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary mt-5">{{ button_label|default('Mettre Ã  jour') }}</button>
        </div
        {{ form_end(form) }}

    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Connexion !{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

<div class="jumbotron container bg-danger">
    <h1 class="h3 mb-3 font-weight-normal text-white">Connectez-vous !</h1>
    <div class="col">
        <label for="inputEmail" class="form-label text-white">Adresse Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"  class="form-control" id="exampleFormControlInput1" placeholder="nom@example.com" required autofocus>
    </div>
    </br>
    <div class="col">
        <label for="inputPassword" class="form-label  text-white">Mot de passe </label>
        <input type="password" name="password" class="form-control" id="inputPassword" required>
    </div>
    </br>
    <div class="col">
    <button type="button" class="btn btn-light">Connexion</button>
    </div>
</div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

</form>
{% endblock %}

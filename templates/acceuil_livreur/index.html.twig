{% extends 'base.html.twig' %}

{% block title %}Hello AcceuilLivreurController!{% endblock %}

{% block body %}
    {% if livraisons is not empty %}
        <table class="table table-hover offset-2 col-8 mt-5">
            <thead>
            <tr class="text-center">
                <th>Date de Livraison</th>
                <th>Adresse de Livraison</th>
                <th>Ville de Livraison</th>
                <th>Status de la commande</th>
                <th>num√©ro de commande</th>
                <th>Valider la commande</th>
            </tr>
            </thead>
            <tbody>
            {% for livraison in livraisons %}
                <tr class="text-center">
                    <td>{{ livraison.dateLivraison | date("d/m/Y h:i:s", "Europe/Paris") }}</td>
                    <td>{{ livraison.adresseLivraison }}</td>
                    <td>{{ livraison.livreur.utilisateur.ville }}</td>
                    <td>{{ livraison.status }}</td>
                    <td>{{ livraison.commande.id }}</td>
                    <td>
                        <a href="/livreur/validation/{{ livraison.id }}" class="btn btn-primary">Valider la livraison</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    {% else %}
        <h2 class="text-center">Vous n'avez pas de commande a livrer</h2>
    {% endif %}

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Voici la catégorie {{ categorie_restaurant.libelle }} {% endblock %}

{% block body %}
    <div class="offset-2 col-8 mt-5">
        <h1 class="text-center">Votre catégorie de restaurant</h1>

        <div class="d-flex justify-content-center mt-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ categorie_restaurant.libelle }}</h5>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around mt-5">
            <a href="{{ path('categorie_restaurant_index') }}" class="btn btn-primary">Retour à la liste</a>

            <a href="{{ path('categorie_restaurant_edit', {'id': categorie_restaurant.id}) }}" class="btn btn-success">Modifier
                la catégorie</a>

        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Vos catégories de restaurant{% endblock %}

{% block body %}
    <div class="offset-2 col-8">
        <h1 class="text-center">Categorie Restaurant index</h1>

        <table class="table table-hover text-center">
            <thead>
            <tr>
                <th>Nom de la catégorie</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for categorie_restaurant in categorie_restaurants %}
                <tr>
                    <td>{{ categorie_restaurant.libelle }}</td>
                    <td>
                        <a href="{{ path('categorie_restaurant_show', {'id': categorie_restaurant.id}) }}"
                           class="btn btn-info">Voir la catégorie</a>
                    </td>
                    <td>
                        <a href="{{ path('categorie_restaurant_edit', {'id': categorie_restaurant.id}) }}"
                           class="btn btn-success">Modifier la catégorie</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune catégorie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-end">
            <a href="{{ path('categorie_restaurant_new') }}" class="btn btn-primary">Ajouter une Catégorie</a>
        </div>
    </div>
{% endblock %}

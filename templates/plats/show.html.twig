{% extends 'base.html.twig' %}

{% block title %}Plats{% endblock %}

{% block body %}
    <div class="offset-2 col-8">
        <h1>Plats</h1>

        <div class="d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
                <img class='img-thumbnail'
                     src="{{ asset('img/plat/' ~ plat.imageFilePlat) }}"
                     style="max-width: 620px"
                     alt="Photo du plat">
                <div class="card-body">
                    <h5 class="card-title">{{ plat.name }}</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <div class="row">
                        <div class="col-6">Prix : {{ plat.price |format_currency('EUR') }} </div>
                        <div class="col-6">Stock : {{ plat.qte }}</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">Catégorie : {{ plat.categoriePlats }}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around mt-4">
            <a href="{{ path('plats_index') }}" class="btn btn-primary">Retour à la liste</a>

            <a href="{{ path('plats_edit', {'id': plat.id}) }}" class="btn btn-success">Editer le plat</a>

            {{ include('plats/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

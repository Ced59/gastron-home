{% extends 'base.html.twig' %}

{% block title %}Secteur index{% endblock %}

{% block body %}
<div class="offset-2 col-8">
    <h1 class="text-center">Secteur index</h1>

    <table class="table table-hover text-center">
        <thead>
        <tr>
            <th>NomSecteur</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for secteur in secteurs %}
            <tr>
                <td>{{ secteur.nomSecteur }}</td>
                <td>
                    <a href="{{ path('secteur_show', {'id': secteur.id}) }}" class="btn btn-info">Voir</a>

                </td>
                <td>
                    <a href="{{ path('secteur_edit', {'id': secteur.id}) }}" class="btn btn-success">Modifier le secteur</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun secteur trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-end">
        <a href="{{ path('secteur_new') }}" class="btn btn-primary">Ajouter un secteur</a>
    </div>
    {% endblock %}
